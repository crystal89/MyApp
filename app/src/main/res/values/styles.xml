<resources>
    <!-- 基础应用程序主题. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--
        <style name="Theme" parent="android:Theme"></style>
    -->
    <!--使主题具有Translucent后台-->
    <string name="Theme.Translucent">
        <item name="android:windowNoTitle">false</item>
        <item name="android:ColorForeground">@drawable/LightSkyBlue</item>
        <item name="android:ColorBackground">@drawable/white</item>
    </string>

    <style name="DavidStyleText1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#EC9237</item>
    </style>

    <style name="DavidStyleText2">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FF7F7C</item>
    </style>

    <drawable name="white">#FFFFFF</drawable>
    <drawable name="black">#000000</drawable>
    <drawable name="LightSkyBlue">#87CEFA</drawable>
</resources>
